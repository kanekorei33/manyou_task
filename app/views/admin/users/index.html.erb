<div class="container">
  <div class="row">

    <p><h1>管理画面のユーザー　一覧だよ！</h1></p>
    <div class="row-center">
          <button type="button" class="btn btn-outline-primary m-4"><%= link_to t('view.new_user'), new_admin_user_path %></button>

    <table class="table table-hover">
      <thead>
        <tr>
          <th> ID </th>
          <th> 名前 </th>
          <th> メール</th>
          <th> タスク数</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.tasks.count %></td>
        <% user.tasks.each do |task| %>
        <% end %>
          <td><%= link_to 'Show', admin_user_path(user), name:user.name,class: "btn btn-outline-info btn-sm"%></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user),class: "btn btn-outline-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: t('view.are_you_sure?') },class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
